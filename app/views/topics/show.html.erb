<div class="col-md-8 col-centered">
  <div class="pull-right">
      <% if current_user && current_user == @topic.user%>
      <%= link_to '编辑', edit_topic_path(@topic),class: "btn btn-sm btn-default" %>
      <% end %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>标题</th>
        <th colspan= "3">内容</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%= @topic.title%></th>
        <th><%= @topic.description %></th>

      </tr>
    </tbody>
  </table>
</div>

<div class="col-md-8 col-centered">
  <h3 class="comments_title">
     评论(<%= @topic.comments.count %>)
  </h3>

  <div id="comments">
    <%= render @topic.comments %>
  </div>
  <%= simple_form_for [@topic, Comment.new]  do |f| %>
  <div class="field">
    <%= f.input :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "评论", class: "btn btn-primary" %>
  <% end %>
</div>
